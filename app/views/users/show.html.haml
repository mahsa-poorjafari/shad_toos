.show-colleague  
  -if flash[:AddUser]        
    .alert.alert-success= flash[:AddUser]
  .col-sm-6
    %h2= 'اطلاعات کاربری'
    %p
      %b نام شرکت همکار:
      = @user.colleague_title
    %p
      %b نام کاربری:
      = @user.user_name
    
    %p
      %b تلفن ثابت:
      = @user.phone
    %p
      %b تلفن همراه:
      = @user.mobile
    %p
      %b آدرس:
      = @user.address 
  .col-sm-6
    %h2= 'اطلاعات مالی '
    %p
      %b مبلغ مانده:
      = @user.amount_remains
    %p
      %b سایر توضیحات:
      = @user.description
  .col-sm-12
    - if @user.id == current_user.id || is_admin?
      .admin-edit-del
        = link_to 'ویرایش', edit_user_path(@user)
        \|
        = link_to 'بازگشت', users_path
