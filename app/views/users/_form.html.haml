= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :colleague_title
    = f.text_field :colleague_title
  .field
    = f.label :user_name
    = f.text_field :user_name
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :mobile
    = f.text_field :mobile
  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :amount_remains
    = f.text_field :amount_remains
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
