= form_for @user, :html => {:class => "contact"} do |f|
  - if @user.errors.any?
    #error_explanation      
      %ul
        - @user.errors.each do |attr, msg|
          %li= msg

  .form-group
    = f.label 'عنوان شرکت همکار:', :class => "col-sm-5 control-label"    
    = f.text_field :colleague_title, :class => "form-control"
  .form-group
    = f.label 'نام کاربری:', :class => "col-sm-5 control-label"    
    = f.text_field :user_name, :class => "form-control"
  .form-group
    = f.label 'تلفن ثابت:', :class => "col-sm-5 control-label"    
    = f.text_field :phone, :class => "form-control"
  .form-group
    = f.label 'تلفن همراه:', :class => "col-sm-5 control-label"    
    = f.text_field :mobile, :class => "form-control"
  .form-group
    = f.label 'آدرس:', :class => "col-sm-5 control-label"    
    = f.text_area :address, :class => "form-control", :style => "resize:none"
  .form-group
    = f.label 'مبلغ باقی مانده:', :class => "col-sm-5 control-label"    
    = f.text_field :amount_remains, :class => "form-control"
  .form-group
    = f.label 'سایر توضیحات:', :class => "col-sm-5 control-label"    
    = f.text_area :description, :class => "form-control", :style => "resize:none"
  .form-group
    = f.submit 'ثبت', :class=> "send-msg"
