%h2= t('signup')
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    = f.label 'نام کاربری:', :class => "col-sm-5 control-label"        
    = f.text_field :user_name, autofocus: true, :class => "form-control"
  .form-group
    = f.label 'رمز عبور:', :class => "col-sm-5 control-label"    

    = f.password_field :password, autocomplete: "off", :class => "form-control"
  .form-group
    = f.label 'تکرار رمز عبور:', :class => "col-sm-5 control-label"    
    
    = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"
  .form-group
    = f.submit 'ثبت', :class => "btn btn-default"
    
= render "devise/shared/links"
