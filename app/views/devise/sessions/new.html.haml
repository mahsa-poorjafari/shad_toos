%h2= t('signin')
= form_for(resource, as: resource_name, url: session_path(resource_name) , :html => {:class => "contact"}) do |f|

  .form-group
    = f.label 'نام کاربری: ',  :class => "control-label"    
    = f.text_field :email, autofocus: true, :class => "form-control"
    
  .form-group
    = f.label 'رمز عبور:',  :class => "control-label" 
    = f.password_field :password, autocomplete: "off", :class => "form-control"
  
  .form-group
    = f.submit t('signin'), :class=> "send-msg"
    
= render "devise/shared/links"
