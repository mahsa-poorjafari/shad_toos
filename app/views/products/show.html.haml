
-if is_admin?  
  = link_to 'ویرایش', edit_product_path(@product)       
  \|
  = link_to 'بازگشت', products_path 
      

    
.col-sm-12
  %h2= @product.category.title   
  %h3= @product.title
  %p= @product.description
  
  
  
.col-sm-12
  - @product.pictures.each do |pic|
    .col-sm-5.show-room      
      =link_to (image_tag pic.image(:medium)), pic.image(:large), :data => { :colorbox => true }, :title => pic.description, :class => "show-room-pic"         
      -#
        .download.set-center
          = link_to  download_product_path(:image_id => pic.id) do
            = image_tag 'dnwn.png'
            = t ('download')
      - if is_admin?
        .admin-edit-del
          = link_to 'ویرایش', edit_picture_path(pic)
          \|
          = link_to 'حذف', pic, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }
          

