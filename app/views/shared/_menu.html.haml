%ul.set-center
  = link_to root_path do
    %li#home.first{:class => ('active' if current_page?(root_path)) }
      = t('home')
  = link_to '#' do
    %li.gallery#category{:class => ('active' if current_page?(categories_path)) }
      =t('section')
  = link_to '#' do
    %li= 'اخبار'
  = link_to Activity do
    %li{:class => ('active' if current_page?(activities_path)) }= 'فعالیت ها'
  = link_to '#' do
    %li#contact{:class => ('active' if current_page?(pages_path)) }
      = t('contact')
.col-sm-6.submenu.contact
  - Page.all.each do |page|
    .col-sm-4.submenu-item      
      =link_to page do
        %b=page.title
        = image_tag page.image(:small)
  .clr-float
.col-sm-6.submenu.category
  - Category.all.each do |category|
    .col-sm-3.submenu-item      
      =link_to category do
        %b=category.title
        = image_tag category.image(:small)
  .clr-float
    
:javascript 
  $('#contact').click(function(){
    $('.submenu.category').hide();
    $('.submenu.contact').slideToggle('slow');
  });
  $('#category').click(function(){
    $('.submenu.contact').hide();
    $('.submenu.category').slideToggle('slow');
  });
