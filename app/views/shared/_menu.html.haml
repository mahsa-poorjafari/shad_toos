%ul.set-center
  = link_to root_path do
    %li#home.first{:class => ('active' if current_page?(root_path)) }
      = t('home')
  = link_to Category do
    %li.gallery
      =t('section')
  = link_to '#' do
    %li= 'اخبار'
  = link_to Activity do
    %li= 'فعالیت ها'
  = link_to '#' do
    %li#contact
      = t('contact')
.col-sm-6.submenu.contact
  - Page.all.each do |page|
    .col-sm-3.submenu-item      
      =link_to  page do
        %i=page.title
        = image_tag 'missing.png'
  .clr-float
  
:javascript 
  $('#contact').click(function(){
    $('.submenu.contact').slideToggle('slow');
  });
