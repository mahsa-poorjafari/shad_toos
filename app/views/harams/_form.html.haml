= form_for @haram do |f|
  - if @haram.errors.any?
    #error_explanation      
      %ul
        - @haram.errors.each do |attr, msg|
          %li= msg
  .col-sm-6.set-center
    .form-group
      = f.label 'توضیحات به فارسی:', :class => "col-sm-4 control-label"      
      = f.text_field :description_fa, :class => "form-control"
    .form-group
      = f.label 'توضیحات به انگلیسی:', :class => "col-sm-4 control-label"      
      = f.text_field :description_en, :class => "form-control"
    .form-group
      = f.label 'توضیحات به عربی', :class => "col-sm-4 control-label"      
      = f.text_field :description_ar, :class => "form-control"
    .form-group
      = f.label 'تصویر حرم', :class => "col-sm-4 control-label"      
      = f.file_field :image
    .form-group
      = f.submit 'ثبت', :class=> "btn btn-default"
