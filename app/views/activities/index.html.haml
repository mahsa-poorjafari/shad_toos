.main-bg
  -if is_admin?    
    = link_to new_activity_path , :class => "admin-access" do
      .admin-edit-del
      %i=  'فعالیت جدید'
  %h1= 'لیست فعالیتها تاکنون'

  %table 

    - @activities.each do |activity|
      %tr
        %td= image_tag activity.image(:small)
        %td= activity.title     
        %td= activity.description     

        %td= link_to 'مشاهده', activity
        %td= link_to 'ویرایش', edit_activity_path(activity)
        %td= link_to 'حذف', activity, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }


