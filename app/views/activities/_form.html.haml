= form_for @activity do |f|
  - if @activity.errors.any?
    #error_explanation      
      %ul
        - @activity.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'تصویر'
    = f.file_field :image
  .field
    = f.label 'عنوان به فارسی'
    = f.text_field :title_fa
  .field
    = f.label "عنوان به انگلیسی"
    = f.text_field :title_en
  .field
    = f.label "عنوان به عربی"
    = f.text_field :title_ar
  .field
    = f.label "توضیحات به فارسی"
    = f.text_area :description_fa
  .field
    = f.label "توضیحات به انگلیسی"
    = f.text_area :description_en
  .field
    = f.label "توضیحات به عربی"
    = f.text_area :description_ar
  .actions
    = f.submit 'ثبت', :class => "btn btn-default"
