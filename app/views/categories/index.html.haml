.category-bg
  -if is_admin?
    .admin-link.fa
      %p= 'منوی صفحه'
      %hr
      = link_to 'تعریف محصول جدید', new_category_path
  = image_tag 'slide4.jpg', :style => "z-index:-20; position:fixed"
  .show-pro.set-center 
    - @categories.each do |category|
      .box-3.set-center{align: "center", :class => I18n.locale}                
        = link_to category do         
          %p= category.title 
          .category-image
            = image_tag category.image(:small)
        
