!!!
%html
  %head
    %title 
      = t("shadtoos") + ', ' + t('hotel')
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png'
    = csrf_meta_tags
    %meta{:charset => "utf-8"}    
    %meta{:name => "description", :content => "hotel, shadtoos, مجتمع تجاری-اقامتی شادتوس"}
    %meta{content: "no", "http-equiv" => "imagetoolbar"}
    = yield(:refresh_meta) if content_for?(:refresh_meta)
    -#
      :javascript
        <!--
        //Disable right click script
        //visit http://www.rainbow.arch.scriptmania.com/scripts/
        var message="Sorry, right-click has been disabled";
        ///////////////////////////////////
        function clickIE() {if (document.all) {(message);return false;}}
        function clickNS(e) {if
        (document.layers||(document.getElementById&&!document.all)) {
        if (e.which==2||e.which==3) {(message);return false;}}}
        if (document.layers)
        {document.captureEvents(Event.MOUSEDOWN);document.onmousedown=clickNS;}
        else{document.onmouseup=clickNS;document.oncontextmenu=clickIE;}
        document.oncontextmenu=new Function("return false")
        // -->
          
  %body     
    
    %header
      #header-top        
      
      .language
        .lan-title= 'LANGUAGE'
        = link_to (image_tag 'flag/en.png'), locale: :en          
        = link_to (image_tag 'flag/fa.png'), locale: :fa
        = link_to (image_tag 'flag/ar.png'), locale: :ar
      
      #logo-menu.set-center   
        = link_to root_path do
          #logo.set-center
            = image_tag 'logo2.png'
            
      - if is_admin?
        .admin_menu
          %h3= 'منوی مدیرسایت'
          = render 'shared/admin_menu'
        
    .main       
      #mainmenu.set-center
        %nav          
          -if I18n.locale == :en       
            .menu_en{:class => I18n.locale}
              = render "shared/menu"
          - else
            .menu_fa{:class => I18n.locale}
              = render "shared/menu"
      - if is_admin?
        %p.instead-slide-for-admin
      
      - else        
        .top-vin.set-center.slider-vintage                    
        .slider 
          - if @sliders.blank?
            %p.instead-slide-for-admin
          - else                   
            = render "sliders/slider", sliders:@sliders
          .site-link.reserv
            .text-box
              %b= t('reserve')
         
          = link_to '/users/sign_in', :class => " site-link login-link" do
            .text-box              
              %b= t('login')
        .bottom-vin.set-center.slider-vintage        
      .clr-float
      .background         
        .col-sm-11.content.set-center{:class => I18n.locale, :style => "min-height:550px; margin-right: 7%;"}
          = yield
      
      .clr-float
    %footer{:class => I18n.locale}
      #footer-bottom 
      = render "shared/footer"

  
:javascript 
  $(".item").first().addClass("active");
  $(".slide-indicator").first().addClass("active");
  $('.carousel').carousel();

